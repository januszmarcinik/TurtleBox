@model double

@{
    double stars = Model;
    for (int i = 1; i <= 5; i++)
    {
        if (stars >= 1)
        {
            <i class="@FontAwesome.star" aria-hidden="true"></i>
        }
        else if (stars == 0.5)
        {
            <i class="@FontAwesome.star_half_o" aria-hidden="true"></i>
        }
        else
        {
            <i class="@FontAwesome.star_o" aria-hidden="true"></i>
        }
        stars--;
    }
}