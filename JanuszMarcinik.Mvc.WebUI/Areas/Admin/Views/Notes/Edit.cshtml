@using JanuszMarcinik.Mvc.WebUI.Areas.Admin.Models.Notes
@model NoteViewModel

@{
    ViewBag.Title = "Edycja wpisu";
}

<h2 class="center-block">
    <span class="label label-warning center-block">@ViewBag.Title</span>
</h2>

@using (var form = Html.Bootstrap().Begin(new Form()))
{
    using (var panel = Html.Bootstrap().Begin(new Panel()))
    {
        using (panel.BeginBody())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)

            <div class="row">
                <div class="col-sm-6">
                    @form.FormGroup().TextBoxFor(x => x.Title)
                </div>
                <div class="col-sm-6">
                    @form.FormGroup().EditorFor(x => x.Date)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @form.FormGroup().TextAreaFor(x => x.Text).Rows(6)
                </div>
            </div>
        }

        using (panel.BeginFooter())
        {
            <div class="btn-group">
                @Html.Bootstrap().SubmitSaveButton()
                @Html.Bootstrap().BackButton(MVC.Admin.Notes.List())
            </div>
        }
    }
}